<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zibbix.medpharmapp.medipharm.BillActivity">

    <EditText
        android:id="@+id/name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="Name from db"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/textfield"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/id_1"
        android:layout_below="@+id/id_1"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Bill Details from Firebase"
        android:inputType="textMultiLine" />


    <EditText
        android:id="@+id/id_1"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/name_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:ems="10"
        android:hint="id from db"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textfield"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="click to pay" />

</RelativeLayout>
